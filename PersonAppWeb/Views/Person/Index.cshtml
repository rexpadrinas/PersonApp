@model IEnumerable<PersonAppWeb.Models.PersonViewModel>

@{
    ViewData["Title"] = "Person Lists";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New</a>
</p>
<div class="col-md-12">

 
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
               Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
     
                    @Html.ActionLink("Edit", "Edit", 
                    new { id=item.ID },
                    new { @class = "btn btn-info"}
                    ) 
                    |
                    @Html.ActionLink("Delete", "Delete",
                    new { id=item.ID },
                    new { @class = "btn btn-danger"}
                    )

                    @if (item.TypeID == 2)
                    {
                        @Html.ActionLink("", "Details",
                        new { id=item.ID },
                        new { @class = "bi bi-file-earmark-bar-graph h3"}
                        )
                    
                    }

            </td>
        </tr>
}
    </tbody>
</table>
